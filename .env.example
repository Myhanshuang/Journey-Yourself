# Flask/FastAPI Secret Key
SECRET_KEY=yoursecretkeyhere
ALGORITHM=HS256

# Encryption Key for sensitive data (32 url-safe base64-encoded bytes)
# You can generate one with: python -c "from cryptography.fernet import Fernet; print(Fernet.generate_key().decode())"
ENCRYPTION_KEY=your-encryption-key-here

# Admin Initialization (Only used if user table is empty)
FIRST_ADMIN_USER=admin
FIRST_ADMIN_PASSWORD=admin

# Persistence
DATABASE_URL=sqlite:///./data/journey.db

# Environment
PRODUCTION=TRUE

# MediaCrawler Service URL
# Local development: http://localhost:8080
# Docker (Linux): http://172.17.0.1:8080 or http://host.docker.internal:8080
# Docker (macOS/Windows): http://host.docker.internal:8080
# Custom network: http://<host-ip>:8080
# Note: http:// prefix is required (or will be auto-added)
MEDIACRAWLER_URL=http://localhost:8080
